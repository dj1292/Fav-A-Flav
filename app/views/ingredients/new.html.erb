<%= form_for @ingredient, method: :post do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label "Food name" %><br>
<%= f.collection_select(:food_id, Food.all, :id, :name) %><br>
<b>Optional:</b><br>
<%= f.label :specifics %>
<%= f.text_field :specifics %> <br>
<%= f.submit %>
<% end %>